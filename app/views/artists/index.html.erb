<% if !@all.empty? %>
    <% @all.each do |artist| %>
        <%= link_to artist.name, artist_path(artist) %>
        (<%= artist.song_count %> <%= "song".pluralize(artist.song_count) %>)<br/>
        <% if !artist.songs.empty? %>
            <% artist.songs.each do |song| %>
                <%= link_to song.title, song_path(song) %><br/>
            <% end %>
        <% end %>
    <% end %>
<% end %>